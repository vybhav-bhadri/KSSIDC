<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.HelloController">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
  <children>
    <HBox alignment="CENTER" spacing="10.0">
      <children>
        <VBox alignment="CENTER_LEFT" spacing="10.0">
          <children>
            <TextField fx:id="folderName" promptText="Folder name"/>
            <Button text="Create Folder" onAction="#createFolder" />
            <Button text="Upload PDF" onAction="#uploadPDF" />
            <TextField fx:id="searchField" promptText="Search File"/>
            <Button text="Search File" onAction="#searchFile" />
            <ListView fx:id="searchResults"/>
            <ListView fx:id="folderList"/>
            <ListView fx:id="fileList"/>
          </children>
        </VBox>
        <Label fx:id="totalPageCountLabel" alignment="TOP_RIGHT"/>
      </children>
    </HBox>
  </children>
</VBox>

