<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<VBox id="mainBox" stylesheets="@com/vybhav/ecko/login.css" alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vybhav.ecko.LoginController">
    <Label fx:id="welcomeLabel" text="Namaste!" id="welcomeLabel"/>
    <ImageView fitWidth="200" fitHeight="200">
        <Image url="@govkar.png" /> <!-- replace logo.png with your own image -->
    </ImageView>
    <HBox fx:id="loginBox" alignment="CENTER" spacing="10.0" maxWidth="850">
        <Label id="testUsernameLabel" text="User Name" />
        <TextField fx:id="usernameField" promptText="Enter Username" maxWidth="250" id="inputField"/>
        <Label id="testPasswordLabel" text="Password" />
        <PasswordField fx:id="passwordField" promptText="Enter Password" maxWidth="250" id="inputField"/>
        <Button text="Login" maxWidth="250" onAction="#login"/>
    </HBox>
    <Label fx:id="errorLabel" textFill="RED"/>
</VBox>
